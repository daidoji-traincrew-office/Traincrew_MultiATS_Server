<Window x:Class="Traincrew_MultiATS_Server.LoadTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Viewbox Grid.Column="0" Grid.Row="0">
            <Button Content="+" Click="IncrementAtsCount" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Viewbox>
        <Viewbox Grid.Column="0" Grid.Row="1">
            <TextBlock Name="Value1" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Viewbox>
        <Viewbox Grid.Column="0" Grid.Row="2">
            <Button Content="-" Click="DecrementAtsCount" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Viewbox>

        <Viewbox Grid.Column="1" Grid.Row="0">
            <Button Content="+" Click="IncrementSignalCount" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="1">
            <TextBlock Name="Value2" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="2">
            <Button Content="-" Click="DecrementSignalCount" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Viewbox>

        <Viewbox Grid.Column="2" Grid.Row="0">
            <Button Content="+" Click="IncrementTidCount" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Viewbox>
        <Viewbox Grid.Column="2" Grid.Row="1">
            <TextBlock Name="Value3" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Viewbox>
        <Viewbox Grid.Column="2" Grid.Row="2">
            <Button Content="-" Click="DecrementTidCount" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Viewbox>
    </Grid>
</Window>